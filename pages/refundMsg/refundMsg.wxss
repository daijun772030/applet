.refund {
  width: 100%;
  height: 100%;
  background-color:rgba(245,245,245,1);
}
.refundMsg{
  width: 710rpx;
  height: 691rpx;
  margin: 20rpx auto;
}
.refundContent{
  width: 690rpx;
  margin: 0 auto;
  background:rgba(255,255,255,1);
  border-radius:2rpx;
}
.refundItem{
  width: 100%;
  height: 85rpx;
  display: flex;
  align-items: center;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
  border-bottom:1rpx solid rgba(238,238,238,1);
}
.explain{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.explain>image {
  width: 61rpx;
  height: 61rpx;
}
.explain>text {
  width: 548rpx;
  font-size:37rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}