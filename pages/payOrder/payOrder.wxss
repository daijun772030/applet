.pay{
  width:100%;
  height: 100%;
  background:rgba(245,245,245,1);
  position: relative;
}
.bg{
  width: 100%;
  height: 495rpx;
  position: absolute;
  z-index: 1;
}
.bg>image {
  width: 100%;
  height: 100%;
}
.payContent{
  width: 690rpx;
  /* height: 700rpx; */
  position: absolute;
  top: 23rpx;
  left: 30rpx;
  border: 1rpx solid red;
  z-index: 10;
}
.payMessage,.payOrder,.payMoney{
  background:rgba(255,255,255,1);
  border-radius:10px;
  margin-bottom: 23rpx;
}
.payMessage{
  width: 100%;
  height: 428rpx;
}
.MessageContent{
  width:calc( 100% - 60rpx);
  margin: 0 auto;
}
.payAddress{
  width: 100%;
  height: 145rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  border-bottom: 1px solid rgba(238,240,239,1);
}
.queryAddress {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 18rpx;
}
.queryAddress>text {
  font-size:40rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(85,85,85,1);
  line-height:30rpx;
}
.queryAddress>image,.timeMessage>image {
  width: 15rpx;
  height: 28rpx;
}
.payAddress>text {
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(119,119,119,1);
  line-height:30rpx;
}
.takeWay,.takeTime{
  width: 100%;
  height: 94rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(238,240,239,1);
}
.takeWay>text{
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(85,85,85,1);
  line-height:30rpx;
  padding-right: 70rpx;
}
.radio-group{
  height: 100%;
  display: flex;
  align-items: center;
}
.radio {
  padding-right: 49rpx;
}
radio .wx-radio-input{
  height: 32rpx;
  width: 32rpx;
}
.TakeName{
  font-size:31rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(85,85,85,1);
  line-height:31rpx;
  padding-right: 70rpx;
}
.timeMessage{
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.timeMessage>text {
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(2,199,141,1);
  line-height:31rpx;
}
radio text {
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:30rpx;
}
.deliveryTime{
  width: 100%;
  height: 94rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sj{
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(85,85,85,1);
  line-height:30rpx;
}
.zq{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(2,199,141,1);
  line-height:30rpx;
}
.payOrder{
  width: 100%;
}
.payMoney{
  width: 100%;
  height: 513rpx;
}
.moneyContent{
  width: 690rpx;
  height: 100%;
  margin:0 auto;
}
.moneyMessage{
  width: 100%;
  height: 418rpx;
}
.payClose{
  width: 100%;
  height: 99rpx;
  position:fixed;
  bottom: 0;
  z-index: 10;
}