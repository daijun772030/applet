.ReCord{
  width: 100%;
  height: 100%;
  background-color:rgba(245,245,245,1);
}
.redTop{
  width: 100%;
  height:300rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index:1;
}
.bg>image {
  width: 100%;
  height: 100%;
}
.redMoney{
  height: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items:center;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
  position: absolute;
  top:40rpx;
  left: 35%;
  z-index: 2
}
.tex {
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(34,208,186,1);
}
.texT {
  color:rgba(102,102,102,1);
}
.lazyMsg{
  width: 100%;
  height: 52rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background:rgba(252,252,244,1);
}
.lazyMsg>image {
  width: 24rpx;
  height: 24rpx;
}
.lazyMsg>text {
  font-size:20rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.content{
  width: 673rpx;
  margin:0 auto;
}
.xfmx{
  height:135rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.xfmxTEX {
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.scroll{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.moneyChid{
  width: 100%;
  height:126rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.moneyChid>image {
  width: 72rpx;
  height: 72rpx;
}
.moneyMsg{
  width: 552rpx;
  height: 100%;
  border-bottom: 1px solid rgba(238,238,238,1);
}
.moneyMsg>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.msgTex {
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.moneyMsg>text {
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
}