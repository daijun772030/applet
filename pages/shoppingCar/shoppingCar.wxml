<scroll-view scrool-y="true" class='shopCar'>
  <view class='shopCarChild' wx:for="{{CarList}}" wx:key='item' wx:for-index="fr">
    <view class='CarFlex'>
      <view class='shopName'>
        <checkbox value='1'/>
        <text>{{item.name}}</text>
      </view>
      <view class='content'>
        <checkbox-group bindchange="checkboxChange">
          <label class="checkbox" wx:for="{{item.data}}">
            <checkbox value="{{item.id}}" checked="{{item.checked}}" />
            {{item.checked}}
          </label>
        </checkbox-group>
        <view class='shopContent'>

          <view class='CarList' wx:for="{{item.data}}" wx:key="child" wx:for-item="items">
            <view class='listLeft'>
              <!-- <checkbox bindchange="checkboxChange" value='{{item.id}}'></checkbox> -->
              <image                                                                                                              src='cloud://sjkj-1-2739cc.736a-sjkj-1-2739cc/img/index/qingxizhong_dingdanxiangqing@2x.png'>
              </image>
              <view class='leftShopName'>
                <text class='shName'>{{items.commodityName}}</text>
                <text class='remark'>无标注</text>
              </view>
            </view>
            <view class='price'>
              <text>￥{{items.price}}</text>
              <view class='NumChid'>
                <image src='cloud://sjkj-1-2739cc.736a-sjkj-1-2739cc/img/index/jianshuliang@2x.png' data-shopId="{{items.id}}"
                  data-id="{{fr}}" data-list='{{item}}' data-childItem='{{items}}' catchtap='moveNum'></image>
                <text>{{items.number}}</text>
                <image src='cloud://sjkj-1-2739cc.736a-sjkj-1-2739cc/img/index/jiahao_haocaishouye@2x.png' data-shopId="{{items.id}}"
                  data-id="{{child}}" catchtap='pushNum'></image>
              </view>
            </view>
          </view>

        </view>
      </view>
      <view class='close'>
        <text>￥0</text>
        <button class='{{length?"hoverBut":""}}' catchtap='goCar'>去结算</button>
      </view>
    </view>
  </view>
</scroll-view>
