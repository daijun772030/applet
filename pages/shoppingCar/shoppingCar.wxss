.shopCar{
  width: 750rpx;
  height: 100%;
  background:rgba(245,245,245,1);
}
.shopCarChild{
  width: 100%;
  background-color: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  margin-bottom:18rpx;
}
.CarFlex{
  width: 700rpx;
}
.shopName{
  width: 100%;
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin-top: 36rpx;
  margin-bottom: 23rpx;
  display: flex;
  position: relative;
}
.shopName checkbox{
  margin-right: 67rpx;
}
.deleteOrder{
  position: absolute;
  right: 0;
}
.content  {
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
checkbox-group{
  width: 48rpx;
  display: flex;
  flex-direction: column;
}
.checkbox{
  width: 100%;
  height: 92rpx;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  margin-bottom: 23rpx;
}
.shopContent{
  width: 652rpx;
}
.CarList{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 23rpx;
}
.listLeft{
  width: 414rpx;
  height: 92rpx;
  display: flex;
  align-items: center;
}
.listLeft image {
  width: 92rpx;
  height: 92rpx;
  padding-right: 20rpx;
}
.listLeft checkbox {
  padding-right: 20rpx;
}
.leftShopName{
  width: 175rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.shName{
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.remark{
  width:175rpx;
  height:36rpx;
  background:rgba(245,245,245,1);
  border-radius:2rpx;
  font-size:20rpx;
  text-align: center;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(178,178,178,1);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.price{
  width: calc( 100% - 432rpx );
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}
.price>text {
  font-size:20rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.NumChid{
  width: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.NumChid image {
  width: 33rpx;
  height: 34rpx;
}
.NumChid text {
  font-size:26rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.close{
  width: 700rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin:20rpx 0 20rpx 0;
}
.close>text{
  font-size:20rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(245,56,74,1);
}
.close>.button {
  width: 128rpx;
  height: 54rpx;
  background:rgba(0,212,160,1);
  border-radius:2px;
  margin-left: 11rpx;
  margin-right: 0;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 54rpx;
}
.hoverBut {
   width: 128rpx;
  height: 54rpx;
  background:rgba(225,225,225,1);
  border-radius:2px;
  margin-left: 11rpx;
  margin-right: 0;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 54rpx;
}
button::after{
  border:none;
  border-radius: 0;
}
/*选项框的样式*/
checkbox {

width: 28rpx;

/* height: 28rpx; */
}
checkbox .wx-checkbox-input {

width: 28rpx;

height: 28rpx;
border-radius:50%;

}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {

background: rgba(117,232,188,1);
border:none;

}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {

width: 28rpx;

height: 28rpx;

line-height: 28rpx;

text-align: center;

font-size: 22rpx;

color: #fff;

background: transparent;

transform: translate(-50%, -50%) scale(1);

-webkit-transform: translate(-50%, -50%) scale(1);

}
/*end*/