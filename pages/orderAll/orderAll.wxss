.order{
  width: 100%;
  height: 100%;
}
.shopNav{
  width: 100%;
  height: 132rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1)
}
.scrollChild{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  /* justify-content: space-around; */
  /* align-items: center; */
}
.navbar-item {
  width: 150rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size:24rpx;
  margin-bottom: 1%;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.navbar-item>text {
  width: 150rpx;
  text-align: center;
}
.navbar-item-active{
  transition: all 0.2s;
  border-bottom: 5rpx solid rgba(46,227,157,1);
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.ContentSwiper{
  width: 100%;
}
.swiperItem,.swiperScrll{
  width: 100%;
  height: 100%;
}
.shopList{
  width: 710rpx;
  margin:30rpx auto;
  display: flex;
}
.userImag{
  width: 106rpx;
  height: 106rpx;
  margin-right: 21rpx;
  display: flex;
  justify-content: center;
  align-content: center;
}
.userImag>image {
  width: 90%;
  height: 90%;
}
.shopMeg{
  width: calc( 100% - 127rpx );
}
.shopName,.orderTime,.dindanList,.dindanChid {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shopName>view{
  display:flex;
  align-items: center;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.shopName>view>image {
  width: 11rpx;
  height: 22rpx;
}
.shopName>text{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,212,160,1);
}
.orderTime{
  font-size:20rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  justify-content: flex-start;
}
.dindanChid text{
  font-size:22rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.shopOneMoney{
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.shopOneMoney text {
  padding-left: 5rpx;
}
.realyBt {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 18rpx;
}
.realyBt button {
  margin:0;
  width:112rpx;
  height:44rpx;
  background:rgba(0,212,160,1);
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height: 44rpx;
  text-align: center;
  border: none;
  border-radius: 0;
}
button::after {
  border: none
}