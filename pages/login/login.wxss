.login{
  width: 100%;
  height: 100%;
}
.loginTopImg{
  width: 100%;
  height:445rpx;
}
.loginTopImg image {
  width: 100%;
  height: 100%;
}
.loginContent{
  width: 100%;
  height: 554rpx;
  border: 1px solid red;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.loginInput {
  width: 513rpx;
  font-size:28rpx;
  border-bottom: 1rpx solid rgba(213,213,213,1);
}
.loginYZ {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.loginYZ button {
  width:187rpx;
  height:57rpx;
  margin-bottom: 10rpx;
  background:rgba(193,215,210,.2);
  /* opacity:0.8; */
  border-radius:5rpx;
  border: none;
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  padding: 0;
  color:rgba(0,224,168,1);
  line-height:57rpx;
}
.loginContent>button{
  width:510rpx;
  height:54rpx;
  font-size:36rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:54rpx;
  background:rgba(0,224,168,1);
  box-shadow:0rpx 3rpx 5rpx 0rpx rgba(1,185,139,0.79);
  border-radius:5rpx;
}